{
  // 1. AI 가독성 및 가이드라인 최적화
  "editor.inlineSuggest.enabled": true,         // 인라인 제안 활성화 (제미나이 추천 코드 표시)
  "editor.formatOnSave": true,                  // 저장 시 자동 포맷팅 (AI 생성 코드 정렬)
  "editor.formatOnPaste": true,                 // 붙여넣기 시 자동 포맷팅
  "editor.suggestSelection": "first",           // 첫 번째 제안 우선 선택
  
  // 2. 파일 관리 및 실시간 동기화 (AI가 파일을 수정할 때 유용)
  "files.autoSave": "onWindowChange",           // 창 전환 시 자동 저장
  "files.exclude": {                            // AI가 읽을 필요 없는 폴더 제외 (토큰 절약)
    "**/.git": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/__pycache__": true
  },

  // 3. 터미널 및 출력 설정 (에러 메시지를 AI가 잘 읽도록 함)
  "terminal.integrated.copyOnSelection": true,  // 선택 시 자동 복사 (AI 채팅창에 붙여넣기용)
  "terminal.integrated.scrollback": 10000,      // 터미널 로그 최대화

  // 4. 언어별 AI 보조 설정 (Python/JS 등 프로젝트 맞춤)
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-py",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // 5. 시각적 가독성 (코딩 리듬 유지용)
  "editor.fontSize": 14,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,               // 미니맵 제거로 넓은 코드 창 확보
  "editor.bracketPairColorization.enabled": true, // 괄호 짝 찾기 (복잡한 AI 코드 분석용)
  "editor.guides.bracketPairs": "active"
}